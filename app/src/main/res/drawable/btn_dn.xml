<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa màu nền (Gradient) -->
    <gradient
        android:startColor="#FF6F00"
        android:endColor="#FF9E00"
        android:angle="45"/>

    <!-- Định nghĩa các góc bo tròn -->
    <corners android:radius="16dp" />

    <!-- Định nghĩa viền cho nút -->
    <stroke
        android:color="#FF5722"
        android:width="2dp" />

    <!-- Định nghĩa khoảng cách padding bên trong nút -->
    <padding
        android:left="20dp"
        android:top="12dp"
        android:right="20dp"
        android:bottom="12dp" />
</shape>
