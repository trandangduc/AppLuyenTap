<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvancedFragment">

    <!-- Sử dụng ScrollView để có thể cuộn nội dung nếu dài hơn màn hình -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#f4f4f4"
        android:clipToPadding="false">

        <!-- Card Bụng Nâng Cao -->
        <LinearLayout
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_bellync"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BỤNG NÂNG CAO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" /> <!-- Sử dụng font dễ đọc hơn -->


        </LinearLayout>

        <!-- Card Ngực Nâng Cao -->
        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_chestnc"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGỰC NÂNG CAO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

        <!-- Card Cánh Tay Nâng Cao -->
        <LinearLayout
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_armnc"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÁNH TAY NÂNG CAO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

        <!-- Card Chân Nâng Cao -->
        <LinearLayout
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_footnc"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHÂN NÂNG CAO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

        <!-- Card Vai và Lưng Nâng Cao -->
        <LinearLayout
            android:id="@+id/title5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_backnc"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAI VÀ LƯNG NÂNG CAO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
    </FrameLayout>
