<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFFFFFF"
    tools:context=".Levelofmovement">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/Targetback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFFFF"
            app:srcCompat="@drawable/baseline_arrow_back_24" />
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFFFF"
            android:text="Bỏ qua"
            android:textColor="#040404" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:textStyle="bold"
        android:background="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:text="Mức độ vận động của bạn?"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />


        <Button
            android:id="@+id/buttonRatTichCuc"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"
            android:text="Rất tích cực"
            android:textColor="@android:color/black"
            app:icon="@drawable/itvandong"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:strokeColor="#696969"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonItVanDong"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="370dp"
            android:layout_height="62dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"
            android:text="Ít vận động"
            android:textColor="@android:color/black"
            app:icon="@drawable/dibo"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:strokeColor="#696969"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonHoiTichCuc"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="370dp"
            android:layout_height="62dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"
            android:text="Hơi tích cực"
            android:textColor="@android:color/black"
            app:icon="@drawable/taptd"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:strokeColor="#696969"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonTichCucVuaPhai"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="370dp"
            android:layout_height="62dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"
            android:text="Tích cực vừa phải"
            android:textColor="@android:color/black"
            app:icon="@drawable/chaybo"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:strokeColor="#696969"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button25"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="80dp"
            android:text="Tiếp theo"
            android:backgroundTint="#0000FF"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>